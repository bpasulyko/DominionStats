<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.altuser.dominionstats" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LogGame"
            android:label="@string/title_activity_log_game"
            android:parentActivityName=".HomeScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.altuser.dominionstats.HomeScreen" />
        </activity>
        <activity
            android:name=".PlayerStats"
            android:label="@string/title_activity_player_stats"
            android:parentActivityName=".PlayerList" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.altuser.dominionstats.PlayerList" />
        </activity>
        <activity
            android:name=".PlayerList"
            android:label="@string/title_activity_player_list"
            android:parentActivityName=".HomeScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.altuser.dominionstats.HomeScreen" />
        </activity>
        <activity
            android:name=".GameList"
            android:label="@string/title_activity_database_viewer"
            android:parentActivityName=".HomeScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.altuser.dominionstats.HomeScreen" />
        </activity>
    </application>

</manifest>
